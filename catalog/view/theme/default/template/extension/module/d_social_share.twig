<div class="d-social-button-wrap">
    <a class="d-social-button "
       title=""
       data-count="..." data-social="linkedin">
        <i class="fa fa-facebook"></i>
        <span>еуые</span>
    </a>
</div>


<div id="d_social_share">
    <div class="d-social-errors">
        {% for eror in error %}
            {{ eror }}
        {% endfor %}
    </div>
    {% if design.rounded and not desing.style=='custom' %}
        <style>
            .jssocials-share-link { border-radius: 50%; }
        </style>
    {% endif %}
    {% if  not id_placement == '#d_social_share' %}
        <div id="{{ id_placement }}"></div>
    {% endif %}
    {% if not error %}
        {% if not design.style=='custom' %}
        <style>
            .d-social-button {
            {{ design.border_radius_set[design.border_radius]}};
            }

            {% for button in buttons %}
            /*btn colors */
            .{{ button.id }} {
                color: {{ button.color }};
                background-color: {{ button.background_color }};
            }

            .{{ button.id }}:hover {
                color: {{ button.color }};
                background-color: {{ button.background_color_active }};
            }

            .{{ button.id }}:active {
                color: {{ button.color }};
                background-color: {{ button.background_color_hover }};
            }

            /*btn sizes*/
            .{{ button.id }} * {
            {% for css, value in design.sizes[design.size]  %}{{ css }}:{{ value }};
            {% endfor %}
            }

            /*btn fix position icon*/
            .d-social-button.{{ button.id }} span {
            {% if button.icon_position == "before" %} padding-left: 0;
            {% elseif button.icon_position == "after" %} padding-right: 0;
            {% endif %}
            }

            {% if button.text == '' %}
            .d-social-button.{{ button.id }} span {
                padding: 0;
            }

            {% endif %}
            {% if design.border_radius == 'round' %}
            .d-social-button.{{ button.id }} {
                width: {{ design.width }};
                height: {{ design.width }};
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .d-social-button span {
                display: none;
            }

            {% endif %}

            {% endfor %}

        </style>
        {% endif %}
        {#<div class="d-social-buttons-container ">#}
        {#{% for button in buttons %}#}
        {#<div class="d-social-button-wrap">#}
        {#<a class="d-social-button {{ button.id }} {{ design.shadow }}"#}
        {#title="{{ button.title }}"#}
        {#data-count="..." data-social="{{ button.id }}">#}
        {#onclick="socialShareManager('{{ button.id }}');">#}
        {#{% if button.icon_position == "before" %}#}
        {#<i class="fa {{ button.icon }}"></i>#}
        {#<span>{{ button.text }}</span>#}
        {#{% elseif button.icon_position == "after" %}#}
        {#<span>{{ button.text }}</span>#}
        {#<i class="fa {{ button.icon }}"></i>#}
        {#{% endif %}#}
        {#</a>#}
        {#</div>#}
        {#{% endfor %}#}
        {#</div>#}
    {% endif %}

    <script>
        $(document).ready(function () {
                    $('[data-social]').socialButtons();
                })
        {% if not native %}
        $(document).ready(function () {
            $("{{ id_placement }}").jsSocials({
                url:'{{ custom_url }}',
                text: '{{ share.text_to_share }}',
                showLabel : '{{ share.showLabel }}',
                showCount : '{{ share.showCount }}',
                shareIn : '{{ share.shareIn }}',
                smallScreenWidth: {{ share.breakpoints.smallScreenWidth  }},
                largeScreenWidth: {{ share.breakpoints.largeScreenWidth  }},
                shares: [
                    {% for social , social_value in buttons%}
                    {
                        share: '{{ social_value.id }}',
                        {% for key, value in social_value.share %}
                          {{ key }}:'{{ value }}',
                        {% endfor %}
                    },
                    {% endfor %}
                ]
        });
        });
        {% else %}
        $("{{ id_placement }}").jsSocials({
            url:'{{ custom_url }}',
            text: '{{ share.text_to_share }}',
            showLabel : '{{ share.showLabel }}',
            showCount : '{{ share.showCount }}',
            shareIn : '{{ share.shareIn }}',
            shares: [{
                renderer: function() {
                    var $result = $("<div>");

                    var script = document.createElement("script");
                    script.text = "(function(d, s, id) {var js, fjs = d.getElementsByTagName(s)[0]; if (d.getElementById(id)) return; js = d.createElement(s); js.id = id; js.src = \"//connect.facebook.net/ru_RU/sdk.js#xfbml=1&version=v2.3\"; fjs.parentNode.insertBefore(js, fjs); }(document, 'script', 'facebook-jssdk'));";
                    $result.append(script);

                    $("<div>").addClass("fb-share-button")
                        .attr("data-layout", "button_count")
                        .appendTo($result);

                    return $result;
                }
            }, {
                renderer: function() {
                    var $result = $("<div>");

                    var script = document.createElement("script");
                    script.src = "https://apis.google.com/js/platform.js";
                    $result.append(script);

                    $("<div>").addClass("g-plus")
                        .attr({
                            "data-action": "share",
                            "data-annotation": "bubble"
                        })
                        .appendTo($result);

                    return $result;
                }
            }, {
                renderer: function() {
                    var $result = $("<div>");

                    var script = document.createElement("script");
                    script.src = "//platform.linkedin.com/in.js";
                    $result.append(script);

                    $("<script>").attr({ type: "IN/Share", "data-counter": "right" })
                        .appendTo($result);

                    return $result;
                }
            }, {
                renderer: function() {
                    var $result = $("<div>");

                    var script = document.createElement("script");
                    script.text = "window.twttr=(function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],t=window.twttr||{};if(d.getElementById(id))return t;js=d.createElement(s);js.id=id;js.src=\"https://platform.twitter.com/widgets.js\";fjs.parentNode.insertBefore(js,fjs);t._e=[];t.ready=function(f){t._e.push(f);};return t;}(document,\"script\",\"twitter-wjs\"));";
                    $result.append(script);

                    $("<a>").addClass("twitter-share-button")
                        .text("Tweet")
                        .attr("href", "https://twitter.com/share")
                        .appendTo($result);

                    return $result;
                }
            }, {
                renderer: function() {
                    var $result = $("<div>");

                    var script = document.createElement("script");
                    script.src = "//assets.pinterest.com/js/pinit.js";
                    $result.append(script);

                    $("<a>").append($("<img>").attr("//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_red_20.png"))
                        .attr({
                            href: "//www.pinterest.com/pin/create/button/?url=http%3A%2F%2Fjs-socials.com%2Fdemos%2F&media=%26quot%3Bhttp%3A%2F%2Fgdurl.com%2Fa653%26quot%3B&description=Next%20stop%3A%20Pinterest",
                            "data-pin-do": "buttonPin",
                            "data-pin-config": "beside",
                            "data-pin-color":"red"
                        })
                        .appendTo($result);

                    return $result;
                }
            }]
        });
        {% endif %}
    </script>
</div>
